<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en">

<dl tal:attributes="class string:portlet portletListing ${view/css_class}"
    i18n:domain="plone">

    <dt class="portletHeader" tal:condition="not:view/data/omit_border">
        <span class="portletTopLeft"></span>
        <span>
           <a class="tile"
              tal:content="view/data/header"
              />
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
      <ul class="listing-items">
          <li class="listing-item">
              <dl class="listing-fields">
                  <tal:fields tal:repeat="field view/transformed">
                      <tal:def tal:define="fieldclass string:each-field f_${field/css_class}"> 
                        <dt tal:content="string: ${field/title}" tal:attributes="class fieldclass"></dt>
                        <dd tal:content="structure field/value" tal:attributes="class fieldclass"></dd>
                      </tal:def>
                  </tal:fields>
              </dl>
          </li>
      </ul>
    </dd>

</dl>
</html>