<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="collective.listingviews">

  <body>
    <metal:core fill-slot="content-core">
      <tal:core-macro metal:define-macro="content-core">
          <div class="nolisting" tal:condition="python:not view.settings.listing_choice">
              <p class="discreet" i18n:translate="label_no_listing">
                  Please choose your view in listing settings.
              </p>
          </div>
          <div class="listing" tal:condition="python: view.settings.listing_choice">
              <p class="discreet" i18n:translate="label_listing">
                  Dummy note.
              </p>
              <div class="noimages" tal:condition="python: len(view.adapter.retrieve_images()) == 0">
                  <p>Zero (Folder)</p>
              </div>
              <div class="noimages" tal:condition="python: len(view.adapter.retrieve_images()) == 1">
                  <p>One (old Collection)</p>
              </div>
              <div class="noimages" tal:condition="python: len(view.adapter.retrieve_images()) == 2">
                  <p>Two (New Collection)</p>
              </div>
          </div>
      </tal:core-macro>
    </metal:core>
  </body>
</html>
