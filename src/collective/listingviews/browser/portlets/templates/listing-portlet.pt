<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en">

<div tal:condition="view/data/omit_border"
     tal:attributes="class string:portletListing ${view/css_class}">
  <div class="listingBody">
    <ul class="listing-items">
      <li class="listing-item" tal:repeat="item_object view/portlet_items">
          <dl class="listing-fields">
              <tal:fields tal:repeat="field item_object">
                  <tal:def tal:define="fieldclass string:each-field f_${field/css_class}"> 
                    <dt tal:content="string: ${field/title}" tal:attributes="class fieldclass"></dt>
                    <dd tal:content="structure field/value" tal:attributes="class fieldclass"></dd>
                  </tal:def>
              </tal:fields>
          </dl>
      </li>
    </ul>
  </div>
  <div class="listingFooter" tal:condition="view/has_footer">
    <a class="tile"
      tal:omit-tag="not:view/has_link"
      tal:attributes="href view/more_url"
      tal:content="view/more_text"
      />
  </div>
</div>

<dl tal:condition="not:view/data/omit_border"
    tal:attributes="class string:portlet portletListing ${view/css_class}"
    i18n:domain="plone">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
           <a class="tile"
              tal:omit-tag="not:view/has_link"
              tal:attributes="href view/more_url"
              tal:content="view/data/header"
              />
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
      <ul class="listing-items">
        <li class="listing-item" tal:repeat="item_object view/portlet_items">
            <dl class="listing-fields">
                <tal:fields tal:repeat="field item_object">
                    <tal:def tal:define="fieldclass string:each-field f_${field/css_class}"> 
                      <dt tal:content="string: ${field/title}" tal:attributes="class fieldclass"></dt>
                      <dd tal:content="structure field/value" tal:attributes="class fieldclass"></dd>
                    </tal:def>
                </tal:fields>
            </dl>
        </li>
      </ul>
    </dd>

    <dd class="portletFooter" tal:condition="view/has_footer">
        <span class="portletBottomLeft"></span>
        <span>
           <a class="tile"
              tal:omit-tag="not:view/has_link"
              tal:attributes="href view/more_url"
              tal:content="view/more_text"
              />
        </span>
        <span class="portletBottomRight"></span>
    </dd>
  </dl>
</html>